<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="tarmii.theme"
      lang="en">

<body>
    <metal:main fill-slot="main">

    <div id="content-core">

        <h1 i18n:translate="heading_edit_classlist">Edit Class List: <span tal:content="view/classlist"> </span></h1>

        <form tal:attributes="action view/getSaveUrl" id="classlist-edit-form" method="POST"> 
            <table>
                <tbody>
                <tr>
                    <th i18n:translate="heading_classname">CLASS NAME</th>
                </tr>
                <tr>
                    <td>
                        <input type="text" value="" id="classlist-title" name="rename.form.newtitle">
                    </td>
                    <td>
                        <input type="submit" value="Save" id="classlist-save" name="form.button.save" >
                    </td>
                </tr>
                </tbody>
            </table>
          </form>

        <div>
                <table>
                    <tbody>
                    <tr>
                        <th i18n:translate="title_code">CODE</th>
                        <th i18n:translate="title_learner_name">LEARNER NAME</th>
                        <th i18n:translate="title_gender">GENDER</th>
                        <th i18n:translate="title_home_language">HOME LANGUAGE</th>
                    </tr>
                    <tr>
                        <td>
                            <input type="text" class="classlist-code" name="code" id="classlist-code">
                        </td>
                        <td>
                            <input type="text" class="classlist-name" name="name" id="classlist-name">
                        </td>
                        <td class="classlist-gender">
                            <select name="gender" id="classlist-gender">
                                <option value="unknown" i18n:translate="gender_unknown">Unknown</option>
                                <option value="male" i18n:translate="gender_male">Male</option>
                                <option value="female" i18n:translate="gender_female">Female</option>
                            </select>
                        </td>
                        <td class="classlist-language">
                            <select name="homeLanguage" id="classlist-homeLanguage">
                                <tal:fill tal:repeat="language view/languages">
                                    <option tal:attributes="value language"
                                            tal:content="language" ></option>   
                                </tal:fill>
                            </select>
                        </td>
                        <td>
                            <input id="learner-add" type="submit" value="Add" name="form.button.add">
                        </td>
                    </tr>
                    </tbody>
                </table>

        </div>

        <div>
            <tal:listing tal:condition="not:view/learners">
                <h3 i18n:translate="message_no_learners">No learners added to this classlist.</h3>
            </tal:listing>

            <tal:learners condition="view/learners">
                <table id="learner-listing" class="listing">
                    <tr tal:repeat="learner view/learners">
                        <td><input type="checkbox" title="Select" name="learners:string:list" id="id-learner" tal:attributes="value learner/getIUUID">
                        <td tal:content="learner/code"></td>
                        <td>
                            <a tal:attributes="href string:${learner/absolute_url}/edit" 
                               tal:content="string:${learner/name}"></a>
                        </td>                        
                        <td tal:content="learner/home_language/to_object/title"></td>                        
                        <td tal:content="learner/gender"></td>
                    </tr>
                </table>
            </tal:learners>
            <input id="learner-remove" type="submit" value="Remove" name="form.button.remove">
        </div>

    </div>

    </metal:main>
</body>
</html>
